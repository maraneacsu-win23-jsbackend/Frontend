<header>
    <div class="container">
        <a id="logo" href="/">
            <img src="/images/icons/LOGO.svg" alt="Silicon" />
        </a>
        <nav>
            <NavLink href="/" Match="NavLinkMatch.All">Overview</NavLink>
            <NavLink href="/features">Features</NavLink>
            <AuthorizeView>
                <Authorized>
                    <NavLink href="/courses">Courses</NavLink>
                </Authorized>
            </AuthorizeView>
            <NavLink href="/contact">Contact</NavLink>
        </nav>
        <div id="theme-switch" class="btn-switch">
            <label for="switch-mode">Light</label>
            <div class="switch">
                <input type="checkbox" id="switch-mode" />
                <span class="slider round"></span>
            </div>
            <label for="switch-mode">Dark</label>
        </div>
        <div class="account-buttons">
            <AuthorizeView>
                <Authorized>
                    <div class="profile">
                        <a href="/account/details">
                            <img src="/images/uploads/profiles/avatar.jpg" />
                        </a>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <a class="btn btn-gray" href="/signin">
                        <i class="fa-regular fa-arrow-right-to-bracket"></i> Sign in
                    </a>
                    <a class="btn btn-theme" href="/signup">
                        <i class="fa-regular fa-user"></i> Sign up
                    </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</header>

